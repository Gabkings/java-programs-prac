import java.awt.*;
import javax.swing.*;
public class FirstJLabel extends JFrame 
    {
       JLabel label1,label2;
       FirstJLabel()
         {
             super("BBIT3 FIRST Label");
             label1= new JLabel("Catherine");
              label2= new JLabel("Kabura");
              label2.setToolTipText("Bbit3 class");
               JFrame con = new JFrame();
                    con.setLayout(new FlowLayout());
                    con.add(label1);
                    con.add(label2);
                    con.setSize(1000,1000);
                    con.setVisible(true);
                        }
                        public static void main(String args[])
                        {
                         FirstJLabel bbit3= new FirstJLabel(); 
                         bbit3.setDefaultCloseOperation
                                 (JFrame.EXIT_ON_CLOSE);
                        }
    }
    
